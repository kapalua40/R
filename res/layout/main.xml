<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="top|left"
	android:orientation="vertical"
	android:background="#3583A0">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Spinner
			android:layout_height="match_parent"
			android:layout_width="150dp"
			android:entries="@array/langs"
			android:id="@+id/spinner1"
			android:alpha="1.0"
			android:popupBackground="#556674"
			android:background="#55000000"
			android:layout_gravity="top|left"
			android:textAlignment="textStart"
			android:gravity="left"/>

		<ImageButton
			android:layout_height="wrap_content"
			android:layout_width="50dp"
			android:src="@drawable/image_11"
			android:background="#55000000"
			android:layout_gravity="center_horizontal"
			android:onClick="btnClick"/>

		<Spinner
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:entries="@array/langs"
			android:id="@+id/spinner2"
			android:alpha="1.0"
			android:popupBackground="#556674"
			android:background="#55000000"
			android:layout_gravity="top|right"
			android:textAlignment="textStart"
			android:gravity="left"/>

	</LinearLayout>

	<EditText
		android:layout_height="100dp"
		android:inputType="textMultiLine"
		android:maxLength="10000"
		android:ems="10"
		android:layout_width="fill_parent"
		android:shadowColor="#7D83C6"
		android:id="@+id/edit"
		android:hint="Введите текст для перевода"
		android:textColorHint="#ACDAE1"
		android:textStyle="italic"
		android:textSize="15sp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:gravity="top|left">

			<ImageButton
				android:layout_height="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:src="@drawable/image_13"
				android:onClick="clear"
				android:layout_gravity="top|left"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="top|right">

			<CheckBox
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="top|right"
				android:text="Определять язык?"
				android:id="@+id/checkBox"
				android:textColor="#004C54"/>

		</LinearLayout>

	</LinearLayout>

	<ScrollView
		android:layout_height="380dp"
		android:layout_width="match_parent">

		<TextView
			android:layout_height="match_parent"
			android:text=""
			android:layout_width="match_parent"
			android:gravity="top|center_horizontal"
			android:textColor="#FAF9FA"
			android:id="@+id/text"
			android:textStyle="italic"
			android:textSize="15sp"/>

	</ScrollView>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="bottom|center_horizontal"
		android:layout_gravity="bottom|center_horizontal">

		<ImageButton
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:src="@drawable/image_18"
			android:background="#55000000"/>

	</LinearLayout>

</LinearLayout>

